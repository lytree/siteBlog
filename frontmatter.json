{
    "$schema": "https://frontmatter.codes/frontmatter.schema.json",
    "frontMatter.framework.id": "astro",
    "frontMatter.preview.host": "http://localhost:4321",
    "frontMatter.content.publicFolder": "public",
    "frontMatter.content.pageFolders": [
        {
            "title": "posts",
            "path": "[[workspace]]/src/content/docs"
        }
    ],
    "frontMatter.taxonomy.contentTypes": [
        {
            "name": "default",
            "pageBundle": true,
            "previewPath": "'blog'",
            "filePrefix": null,
            "clearEmpty": true,
            "fields": [
                {
                    "title": "title",
                    "name": "title",
                    "type": "string",
                    "single": true
                },
                {
                    "title": "description",
                    "name": "description",
                    "type": "string",
                    "default": ""
                },
                {
                    "title": "date",
                    "name": "date",
                    "type": "datetime",
                    "default": "{{now}}",
                    "isPublishDate": true
                },
                {
                    "title": "preview",
                    "name": "image",
                    "type": "image",
                    "isPreviewImage": true
                },
                {
                    "title": "tags",
                    "name": "tags",
                    "type": "list",
                    "default": []
                },
                {
                    "title": "category",
                    "name": "category",
                    "type": "list",
                    "default": ["Uncategorized"]
                },
                {
                    "title": "draft",
                    "name": "draft",
                    "type": "boolean",
                    "default": false
                }
            ]
        }
    ]
}