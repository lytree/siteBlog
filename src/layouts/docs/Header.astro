---
import DocHeaderItem from "@/components/docs/DocHeaderItems.vue";
import type { MenuItem } from "primevue/menuitem";
const items: Array<MenuItem> = [
    {
        label: "Home",
        icon: "pi i-mdi-home",
    },
    {
        label: "Features",
        icon: "pi pi-star",
    },
    {
        label: "Projects",
        icon: "pi pi-search",
        items: [
            {
                label: "Components",
                icon: "pi pi-bolt",
            },
            {
                label: "Blocks",
                icon: "pi pi-server",
            },
            {
                label: "UI Kit",
                icon: "pi pi-pencil",
            },
            {
                label: "Templates",
                icon: "pi pi-palette",
                items: [
                    {
                        label: "Apollo",
                        icon: "pi pi-palette",
                    },
                    {
                        label: "Ultima",
                        icon: "pi pi-palette",
                    },
                ],
            },
        ],
    },
    {
        label: "Contact",
        icon: "pi pi-envelope",
    },
];
import { SITE_TITLE } from "@/consts";
---

<header>
    <DocHeaderItem title={SITE_TITLE} items={items} client:load="vue" />
</header>
<style>
    header {
        margin: 0;
        padding: 0;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
</style>
