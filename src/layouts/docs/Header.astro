---
import DocHeaderItem from "@/components/docs/DocHeaderItems.vue";
import type { MenuItem } from "primevue/menuitem";
const items: Array<MenuItem> = [
    {
        label: "首页",
        icon: "pi i-mdi-home",
        url: "/docs",
    },
    {
        label: "归档",
        icon: "pi i-mdi-archive",
        url: "/docs/archive",
    },
    {
        label: "分类",
        icon: "pi i-mdi-category",
        url: "/docs/category",
    },
    {
        label: "标签",
        icon: "pi i-mdi-tag",
        url: "/docs/tag",
    },
    {
        label: "关于",
        icon: "pi i-mdi-about",
        url: "/docs/about",
    },
];
import { SITE_TITLE } from "@/consts";
---

<header>
    <DocHeaderItem title={SITE_TITLE} items={items} client:load="vue" />
</header>
<style>
    header {
        margin: 0;
        padding: 0;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
</style>
