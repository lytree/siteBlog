---
import { getCategoryList } from '@/theme/blog/utils/content-utils'
import BlogLayout from '@/theme/blog/BlogLayout.astro';
import ArchivePanel from'@/theme/blog/components/ArchivePanel.astro';

export async function getStaticPaths() {
  const categories = await getCategoryList()
  return categories.map(category => {
    return {
      params: {
        category: category.name,
      },
    }
  })
}

const category = Astro.params.category as string

---

<BlogLayout title={"分类"} description={"分类"}>
    <ArchivePanel categories={[category]}></ArchivePanel>
</BlogLayout>