---
import { getTagList } from '@/theme/blog/utils/content-utils'
import BlogLayout from '@/theme/blog/BlogLayout.astro';
import ArchivePanel from'@/theme/blog/components/ArchivePanel.astro';

export async function getStaticPaths() {
  const tags = await getTagList()
  return tags.map(tag => {
    return {
      params: {
        tag: tag.name,
      },
    }
  })
}

const tag = Astro.params.tag as string
---

<BlogLayout title={"标签"} description={"标签"}>
    <ArchivePanel tags={[tag]}></ArchivePanel>
</BlogLayout>