---
import { getCategoryList, getTagList } from '@/theme/blog/utils/content-utils'
import BlogLayout from '@/theme/blog/BlogLayout.astro';
import ArchivePanel from'@/theme/blog/components/ArchivePanel.astro';

export async function getStaticPaths() {
  const tags = await getTagList()
  return  tags.map(category => {
    return {
      params: {
        category: category.name,
      },
    }
  })
}

const category = Astro.params.category as string
---

<BlogLayout title={"标签"} description={"标签"}>
    <ArchivePanel ></ArchivePanel>
</BlogLayout>