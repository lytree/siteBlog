---
import { getCategoryList, getTagList } from '@/utils/content-utils'
import DocLayout from '@/layouts/BlogLayout.astro'
import ArchivePanel from '@/components/ArchivePanel.astro'

export async function getStaticPaths() {
  const tags = await getTagList()
  return  tags.map(category => {
    return {
      params: {
        category: category.name,
      },
    }
  })
}

const category = Astro.params.category as string
---

<DocLayout title={"标签"} description={"标签"}>
    <ArchivePanel ></ArchivePanel>
</DocLayout>