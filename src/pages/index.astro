---
import Footer from "@/components/common/GlobalFooter.vue";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
	<div class="flex flex-col h-full">
		<div class="h-full flex flex-col justify-center items-center;">
			<div class="flex justify-center items-center">
				<img
					class="logo inline rounded-full"
					src="https://blog-1257980368.cos.ap-shanghai.myqcloud.com/avatar.jpg"
					alt="logo"
					width="150"
				/>
			</div>

			<h1
				class="flex justify-center items-center text-gray-700 dark:text-gray-200"
			>
				lytree
			</h1>
			<h2
				class="flex justify-center items-center text-gray-700 dark:text-gray-200"
			>
				回忆的地方
			</h2>
			<p class="flex justify-center items-center">
				<a href="https://github.com/lytree">
					<img
						src="https://img.shields.io/badge/GitHub-181717?logo=Github&logoColor=fff"
						alt="Github"
					/>
				</a>
				<a href="https://space.bilibili.com/89673196">
					<img
						src="https://img.shields.io/badge/bilibili-181717?logo=bilibili&logoColor=fff"
						alt="Bilibili"
					/>
				</a>
				<a href="https://www.zhihu.com/people/zang-xin-18-71">
					<img
						src="https://img.shields.io/badge/知乎-181717?logo=zhihu&logoColor=fff"
						alt="Zhihu"
					/>
				</a>
				<a href="https://weibo.com/u/5648434038">
					<img
						src="https://img.shields.io/badge/微博-181717?logo=sinaweibo&logoColor=fff"
						alt="Github"
					/>
				</a>
				<a href="https://juejin.cn/user/307518986271495">
					<img
						src="https://img.shields.io/badge/掘金-181717?logo=juejin&logoColor=fff"
						alt="Github"
					/>
				</a>
				<a href="/docs">
					<img
						src="https://img.shields.io/badge/博客-181717?logo=bloglovin&logoColor=fff"
						alt="Github"
					/>
				</a>
				<a href="/nav">
					<img
						src="https://img.shields.io/badge/导航-181717?logo=accenture&logoColor=fff"
						alt="Github"
					/>
				</a>
			</p>
		</div>
		<div class="shrink-0">
			<Footer client:load />
		</div>
	</div>

	<style lang="scss">
		.logo:hover {
			transform: rotate(666turn);
			transition: transform 59s 1s cubic-bezier(0.3, 0, 0.8, 1);
		}
	</style>
</BaseLayout>
